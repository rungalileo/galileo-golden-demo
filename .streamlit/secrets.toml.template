# API Keys
# -----------------------------------------------------------------------------
openai_api_key = ""           # Your OpenAI API key
galileo_api_key = ""          # Your Galileo API key

# Galileo Configuration
# -----------------------------------------------------------------------------
# Each domain automatically gets its own Galileo project:
#   Default: "galileo-demo-{domain_name}"
#   Example: finance domain â†’ "galileo-demo-finance"
#
# To override the default project name for a domain, edit:
#   domains/{domain}/config.yaml
# -----------------------------------------------------------------------------
# Console URL for your Galileo instance
galileo_console_url = "https://console.galileo.ai"  # Or your custom URL

# Protect stage name (used for prompt injection protection)
galileo_stage = "protect-prompt-injection-stage"

# Pinecone Configuration
# -----------------------------------------------------------------------------
# Each project has its own API key - you need both to create vector databases
# for both local development and hosted/production environments.
pinecone_api_key_local = ""    # For galileo-demo-local Pinecone project
pinecone_api_key_hosted = ""   # For galileo-demo-hosted Pinecone project

# Environment Configuration
# -----------------------------------------------------------------------------
# Set to "local" for local development, "hosted" for production/deployed demos
# This determines which Pinecone project is used for vector storage.
environment = "local"

# Live Finance Data (Optional)
# -----------------------------------------------------------------------------
# Alpha Vantage API key for backup stock data source.
# Get a free key at: https://www.alphavantage.co/support/#api-key
# Note: Yahoo Finance (yfinance) is used as the primary source and requires no key.
alpha_vantage_api_key = ""

# Observability Platforms (Optional)
# -----------------------------------------------------------------------------
# LangSmith Configuration
LANGCHAIN_API_KEY = ""           # LangSmith API key (uses same project name as Galileo)

# Braintrust Configuration
BRAINTRUST_API_KEY = ""          # Braintrust API key (uses same project name as Galileo)

# Admin Configuration
# -----------------------------------------------------------------------------
# Used to authorize users for deleting experiments in the UI
admin_key = ""
